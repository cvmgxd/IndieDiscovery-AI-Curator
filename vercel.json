{
  "version": 2,
  "functions": {
    "api/discover.py": {
      "maxDuration": 60
    }
  },
  "builds": [
    { "src": "frontend/package.json", "use": "@vercel/next" },
    { "src": "api/index.py", "use": "@vercel/python" },
    { "src": "api/discover.py", "use": "@vercel/python" }
  ],
  "routes": [
    { "src": "^/api/discover$", "dest": "api/discover.py" },
    { "src": "^/api/?$", "dest": "api/index.py" },
    { "handle": "filesystem" },
    { "src": "^/$", "dest": "frontend" },
    { "src": "^/(.*)$", "dest": "frontend/$1" }
  ],
  "env": {
    "PYTHONPATH": "."
  }
}
